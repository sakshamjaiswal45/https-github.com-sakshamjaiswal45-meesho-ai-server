{
  "manifest_version": 3,
  "name": "Meesho AI Listing Generator",
  "version": "1.1",
  "description": "Generate AI listings from product images or text descriptions",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:5001/*",
    "http://127.0.0.1:5001/*",
    "https://supplier.meesho.com/*",
    "https://*.railway.app/*",
    "https://*.up.railway.app/*",
    "https://*.onrender.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://supplier.meesho.com/*"],
      "js": ["selector-utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
